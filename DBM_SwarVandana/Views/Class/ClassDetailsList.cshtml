@model List<Models.ClassDetails>
@{
    ViewBag.Title = "Class Details List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function AddNew() {
        window.location.href = '@Url.Action("ClassDetails", "Class")';
    }
</script>
<div class="container">
    <!-- table-info -->
    <div class="table-info">
        <!-- start table-form -->
        <div class="table-form">
            <form action="#">
                
                <input type="text" name="field" value="" class="input" />
                
                <input name="submit" type="submit" value="Excel Button" class="submit-btn" />
                <label for="From">&nbsp;</label>
                <input name="submit" type="button" onclick="AddNew()" value="Add New" class="submit-btn" />
            </form>
        </div>
        <!-- end table-form -->
        <!-- start table -->
        <div style="float: left; width: 100%">
            <table cellpadding="0" cellspacing="0" class="table">
                <!-- start row -->
                <tr bgcolor="#ccc">
                    <td class="td">Class Name</td>
                    <td class="td">Discipline</td>
                    <td class="td">Faculty</td>
                    <td class="td">Center ID</td>
                    <td class="td">Start Date</td>
                    <td class="td">End Date</td>
                    <td class="td">Action</td>
                </tr>
                <!-- end row -->
                @foreach (var v in Model)
                {
                    <!-- start row -->
                    <tr>
                        <td class="td">@v.ClassName</td>
                        <td class="td">@v.DisciplineId</td>
                        <td class="td">@v.FacultyId</td>
                        <td class="td">@v.CentreId</td>
                        <td class="td">@string.Format("{0:dd MMM yyyy}", v.StartDate)</td>
                        <td class="td">@string.Format("{0:dd MMM yyyy}", v.EndDate)</td>
                        <td class="td edit"><a href="@Url.Action("ClassDetails", "Class", new { facultyId = v.ClassId })" title="Edit"><span>Edit</span></a></td>
                    </tr>
                    <!-- end row -->
                }
                @{if (Model.Count() == 0)
                  {
                    <td class="row">
                        <td class="td" style="text-align: center">No record found.</td>
                    </td>

                  }}
            </table>
        </div>
        <!-- end table -->
    </div>
</div>
