@model List<Models.ClassDetails>
@{
    ViewBag.Title = "Class Details List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- table-info -->
    <div class="table-info">
        <!-- start table-form -->
        <div class="table-form">
            <form action="#">
                <label for="From">From Date</label>
                <input type="text" name="field" value="" class="input" />
                <label for="From">From Date</label>
                <input type="text" name="field" value="" class="input" />
                <select name="field" id="Inventory" class="select">
                    <option></option>
                </select>
                <input name="submit" type="submit" value="Excel Button" class="submit-btn" />
            </form>
        </div>
        <!-- end table-form -->
        <!-- start table -->
        <div class="table">
            <!-- start row -->
            <div class="row-first">
                <div class="td">Discipline</div>
                <div class="td">Faculty</div>
                <div class="td">Center ID</div>
                <div class="td">Start Date</div>
                <div class="td">End Date</div>
                <div class="td">Action</div>
            </div>
            <!-- end row -->
            @foreach (var v in Model)
            {
                <!-- start row -->
                <div class="row">
                    <div class="td">@v.DisciplineId</div>
                    <div class="td">@v.FacultyId</div>
                    <div class="td">@v.CentreId</div>
                    <div class="td">@string.Format("{0:dd MMM yyyy}", v.StartDate)</div>
                    <div class="td">@string.Format("{0:dd MMM yyyy}", v.EndDate)</div>
                    <div class="td edit"><a href="@Url.Action("ClassDetails", "Class", new { facultyId = v.FacultyId })" title="Edit"><span>Edit</span></a></div>
                </div>
                <!-- end row -->
            }
            @{if (Model.Count() == 0)
            {
                <div class="row">
                    <div class="td" style="text-align: center">No record found.</div>
                </div>

            }}

        </div>
        <!-- end table -->
    </div>
</div>
