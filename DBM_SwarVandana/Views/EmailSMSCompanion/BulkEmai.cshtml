@{
    ViewBag.Title = "BulkEmai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="col-md-6 col-md-offset-3">

        <div class="alert"></div>
        @using (Html.BeginForm("BulkEmai", "EmailSMSCompanion", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            
             <div class="panel panel-default">
            <div class="panel-heading">Download  Sample  Template </div>
            <div class="panel-body">
                <div class="media">
                    <div class="pull-left">
                        <div class="alert alert-info">Step -1</div>
                    </div>
                    <div class="media-body">
                        <p class="list-group-item-text"><a class="btn btn-primary" href="@Url.Content("~/Content/SampleTEmplate/EmailUploadSample.xlsx")">Download</a></p>
                    </div>
                </div>
            </div>
        </div>

           
            <div class="panel panel-default">
                <div class="panel-heading">Browse Your  Template </div>
                <div class="panel-body">
                    <div class="media">
                        <div class="pull-left">
                            <div class="alert alert-info">Step -2</div>
                        </div>
                        <div class="media-body">
                            <p class="list-group-item-text"><input type="file" data-val="true" data-val-required="please browse the file" id="file_upload" name="file" class="exp_file"></p>
                        </div>
                    </div>
                </div>
            </div>


            
            <div class="panel panel-default">
                <div class="panel-heading">Click On Upload Button </div>
                <div class="panel-body">
                    <div class="media">
                        <div class="pull-left">
                            <div class="alert alert-info">Step -3</div>
                        </div>
                        <div class="media-body">
                            <h4 class="list-group-item-heading"></h4>
                            <p class="list-group-item-text">
                               <textarea name="message" placeholder="Enter email Test"></textarea>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
            
            
            <div class="panel panel-default">
                <div class="panel-heading">Click On Upload Button </div>
                <div class="panel-body">
                    <div class="media">
                        <div class="pull-left">
                            <div class="alert alert-info">Step -4</div>
                        </div>
                        <div class="media-body">
                            <h4 class="list-group-item-heading"></h4>
                            <p class="list-group-item-text">
                                <button class="btn btn-primary" type="submit">Upload</button>
                                <a class="btn btn-primary" onclick="Reset()" href="Javascript:void(0)">Reset</a>
                            </p>
                        </div>
                    </div>

                </div>
            </div>


        }
    </div>

    <div class="col-md-4"></div>
</div>