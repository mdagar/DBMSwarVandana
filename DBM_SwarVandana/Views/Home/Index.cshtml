@model ViewModel.UsersViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Welcome To DBM - Swar Vandana</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    @*<link href="~/Content/css/colorbox.css" rel="stylesheet" />*@
    <link href="~/Content/css/loginstyle.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css' />
    <!--[if IE 7]><link rel="stylesheet" type="text/css" href="css/ie7.css" media="screen" /><![endif]-->
    <!--[if IE 8]><link rel="stylesheet" type="text/css" href="css/ie8.css" media="screen" /><![endif]-->
    <!--[if IE 9]><link rel="stylesheet" type="text/css" href="css/ie.css" media="screen" /><![endif]-->
    @*<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>*@
    @*<script src="~/Content/js/jquery.colorbox.js"></script>*@

</head>
<body class="login-page">
    <!-- start box -->
    <div class="box">
        <!-- start header -->
        <div class="header">
            <!-- start logo -->
            <div class="logo">
                <a href="@Url.Action("Index","Home")" title="Svar Vandana">
                    <img src="~/Content/images/logo.png" alt="Svar Vandana" />
                </a>
            </div>
            <!-- end logo -->
        </div>
        <!-- end header -->
        <!-- atsrt container -->
        <div class="container">
            <!-- start login-box -->
            <div class="login-box">
                <div class="top">
                    <div class="login-tag"></div>
                </div>
                <!-- content -->
                <div class="content">
                    <h3>Happiness@@ Music</h3>
                    @using (Html.BeginForm())
                    {
                        <div>@Html.ValidationSummary(false)</div>
                        <div class="form">
                            <div class="row">
                                @Html.TextBoxFor(x => x.UserName, new { @class = "input", @PlaceHolder = "Enter UserName" })
                            </div>
                            <div class="row lock">
                                @Html.PasswordFor(x => x.Password, new { @class = "input", @PlaceHolder = "Enter Password" })
                            </div>
                        </div>
                        <input type="submit" id="btnLogin" value="Login" class="button" />
                    }
                </div>
                <!-- content -->
            </div>
            <!-- end login-box -->
            <a href="@Url.Action("ForgotPassword","Home")" title="Forgot your password?" class="link inline">Forgot your password?</a>
        </div>
        <!-- end container -->
    </div>
    <!-- end box -->
</body>
</html>
