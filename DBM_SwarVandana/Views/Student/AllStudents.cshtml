@model IEnumerable<Models.Students>
@{
    ViewBag.Title = "All    Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start container -->
<div class="container">
    <!-- table-info -->
    <div class="table-info">
        <!-- start table-form -->
        <div class="table-form">
            <form action="#">
                <input type="text" name="field" placeholder="Search" value="" class="input" />                
                <input name="submit" type="submit" value="Search" class="submit-btn" />
                <label for="From">&nbsp;</label>
                <input name="submit" type="button" value="Export" class="submit-btn" />
            </form>
        </div>
        <!-- end table-form -->
        <!-- start table -->
        <div>
        <div class="table">
            <table width="100%" >
                <!-- start row -->
                <tr bgcolor="#ccc" class="row-first">
                    <td class="td td1">Unique Key</td>
                    <td class="td">Name</td>
                    <td class="td">DOB</td>
                    <td class="td">Contact Number 1</td>
                    <td class="td">Contact Number 1</td>
                    <td class="td">Email ID</td>
                    <td class="td">Address</td>
                    <td class="td">State</td>
                    <td class="td">City</td>
                    <td class="td">Guardian Name</td>
                    <td class="td">Occupation</td>
                    <td class="td">Has Transport Facility</td>
                    <td class="td">Action</td>
                </tr>
                <!-- end row -->
                @foreach (var v in Model)
                {
                    <!-- start row -->
                    <tr class="row">
                        <td class="td td1">@v.UniqueKey</td>
                        <td class="td">@v.Name</td>
                        <td class="td">@string.Format("{0:dd MMM yyyy}", v.DOB)</td>
                        <td class="td">@v.Contact1</td>
                        <td class="td">@v.Contact2</td>
                        <td class="td">@v.EmailAddress</td>
                        <td class="td">@v.Address</td>
                        <td class="td">@v.StateId</td>
                        <td class="td">@v.CityId</td>
                        <td class="td">@v.GuardianName</td>
                        <td class="td">@v.Occupation</td>
                        <td class="td">@v.HasTransportFacility</td>
                        <td class="td edit"><a href="@Url.Action("AddStudents", "Students", new { Id = v.Id })" title="Edit"><span>Edit</span></a></td>
                    </tr>

                    <!-- end row -->
                }
                @{if (Model.Count() == 0)
                {
                    <tr class="row">
                        <td class="td" style="text-align: center">No record found.</td>
                    </tr>

                }}
            </table>
