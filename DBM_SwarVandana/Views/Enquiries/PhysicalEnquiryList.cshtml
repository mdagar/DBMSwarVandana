@model IEnumerable<Models.Enquiries>
@{
    ViewBag.Title = "PhysicalEnquiryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start container -->
<div class="container">
    <!-- table-info -->
    <div class="table-info">
        <!-- start table-form -->
        <div class="table-form">
            <form action="#">
                <input type="text" name="search" value="" class="input" />
                <input type="submit" value="Search" class="input" />
                <input name="submit" type="button" value="Export" onclick="Export()" class="submit-btn" />
            </form>
        </div>
        <!-- end table-form -->
        <!-- start table -->
        <div class="table">
            <!-- start row -->
            <div class="row-first">
                <div class="td">Name</div>
                <div class="td">Discipline</div>
                <div class="td">Contact Number</div>
                <div class="td">Date of Enquiry</div>
                <div class="td">Source</div>
                <div class="td">Remarks</div>
                <div class="td">Action</div>
            </div>
            <!-- end row -->
            @foreach (var v in Model)
            {
                <!-- start row -->
                <div class="row">
                    <div class="td">@v.Name</div>
                    <div class="td">@v.Discipline</div>
                    <div class="td">@v.ContactNumber</div>
                    <div class="td">@string.Format("{0:dd MMM yyyy}", v.DateOfEnquiry)</div>
                    <div class="td">@v.SourceId</div>
                    <div class="td">@v.RemarksByFaculty</div>
                    <div class="td edit"><a href="@Url.Action("PhysicalEnquiry", "Enquiries", new { enquiryId = v.EnquiryId })" title="Edit"><span>Edit</span></a></div>
                </div>
                <!-- end row -->
            }
            @{if (Model.Count() == 0)
              {
                <div class="row">
                    <div class="td" style="text-align: center">No record found.</div>
                </div>
                
              }}

        </div>
        <!-- end table -->
    </div>
</div>
<script type="text/javascript">
    function Export()
    {
        window.location.href = '@Url.Action("PhysicalEnquiryList", "Enquiries")';
    }
</script>
