@model IEnumerable<Models.Enquiries>
@{
    ViewBag.Title = "Telephonic Enquiry List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start container -->
<div class="container">

   
    <!-- table-info -->
    <div class="table-info">
        <!-- start table-form -->
        <div class="table-form">
            <form action="#">
                <label for="From">From Date</label>
                <input type="text" name="field" value="" class="input" />
                <label for="From">From Date</label>
                <input type="text" name="field" value="" class="input" />
                <select name="field" id="Inventory" class="select">
                    <option></option>
                </select>
                <input name="submit" type="submit" value="Excel Button" class="submit-btn" />
            </form>
        </div>
        <!-- end table-form -->
        <!-- start table -->
        <div class="table">
            <!-- start row -->
            <div class="row-first">
                <div class="td">Name</div>
                <div class="td">Discipline</div>
                <div class="td">Contact Number</div>
                <div class="td">Date of Enquiry</div>
                <div class="td">Source</div>
                <div class="td">Address</div>
                <div class="td">State</div>
                <div class="td">City</div>
                <div class="td">Status</div>
                <div class="td">Remarks</div>
                <div class="td">Action</div>
            </div>
            <!-- end row -->
            @foreach (var v in Model)
            {
                <!-- start row -->
                <div class="row">
                    <div class="td">@v.Name</div>
                    <div class="td">@v.Discipline</div>
                    <div class="td">@v.ContactNumber</div>
                    <div class="td">@string.Format("{0:dd MMM yyyy}", v.DateOfEnquiry)</div>
                    <div class="td">@v.SourceId</div>
                    <div class="td">@v.Address</div>
                    <div class="td">@v.StateId</div>
                    <div class="td">@v.CityId</div>
                    <div class="td">@v.StatusId</div>
                    <div class="td">@v.RemarksByFaculty</div>
                    <div class="td edit"><a href="@Url.Action("TelephonicEnquiry", "Enquiries", new { enquiryId = v.EnquiryId })" title="Edit"><span>Edit</span></a></div>
                </div>
                <!-- end row -->
            }
            @{if (Model.Count() == 0)
              {
                <div class="row">
                    <div class="td" style="text-align: center">No record found.</div>
                </div>
                
              }}

        </div>
        <!-- end table -->
    </div>
</div>
