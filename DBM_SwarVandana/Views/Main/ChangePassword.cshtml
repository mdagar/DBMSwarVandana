@model ViewModel.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start container -->
<div class="container">

    <!-- registration-form -->
    <div class="registration-form">
        @using (Html.BeginForm("ChangePassword", "Main", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div>
                @if (!string.IsNullOrEmpty(ViewBag.Success))
                {
                    @ViewBag.Success
                }
                else
                {
                    @ViewBag.Error
                }
            </div>
            <h3>Change Password</h3>
            <div class="row">
                <label for="Password">Current Password:</label>
                @Html.PasswordFor(x => x.Password, new { @class = "input" })
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div class="row">
                <label for="Password">New Password:</label>
                @Html.PasswordFor(x => x.NewPassword, new { @class = "input" })
                @Html.ValidationMessageFor(x => x.NewPassword)
            </div>
            <div class="row">
                <label for="Password">Confirm Password:</label>
                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "input" })
                @Html.ValidationMessageFor(x => x.ConfirmPassword)
            </div>
            <div class="rowbutton">
                <input type="submit" id="btnChange" value="Change" class="submit-btn" />
                @*<input name="submit" type="submit" value="CANCEL" class="submit-btn gap" />
                    <input name="submit" type="submit" value="SUBMIT" class="submit-btn" />*@
            </div>
        }
    </div>
    <!-- registration-form -->
</div>
<!-- end container -->

