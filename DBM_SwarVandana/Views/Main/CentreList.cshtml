@model List<Models.Centres>
@{
    ViewBag.Title = "Centre List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- table-info -->
    <div class="table-info">
        <!-- start table-form -->
        <div class="table-form" style="float:right; text-align:right !important">
            <form action="#">
                <input type="text" name="Search" placeholder="Search" value="" class="input" />
                
                <input type="submit" name="field" value="Search" class="submit-btn" />
                <label for="From">&nbsp;</label>
                <input name="submit" type="submit" value="Export" class="submit-btn" />
            </form>
        </div>
        <!-- end table-form -->
        <!-- start table -->
        <div class="table">
            <!-- start row -->
            <div class="row-first">
                <div class="td">Centre Name</div>
                <div class="td">Address</div>
                <div class="td">State</div>
                <div class="td">City</div>
                <div class="td">Centre Open Date</div>
                <div class="td">Action</div>
            </div>
            <!-- end row -->
            @foreach (var v in Model)
            {
                <!-- start row -->
                <div class="row">
                    <div class="td">@v.CentreName</div>
                    <div class="td">@v.Address</div>
                    <div class="td">@v.StateId</div>
                    <div class="td">@v.CityId</div>
                    <div class="td">@string.Format("{0:dd MMM yyyy}", v.CentreOpenDate)</div>
                    <div class="td edit"><a href="@Url.Action("CentreRegistration", "Main", new { centreId = v.CentreId })" title="Edit"><span>Edit</span></a></div>
                </div>
                <!-- end row -->
            }
            @{if (Model.Count() == 0)
            {
                <div class="row">
                    <div class="td" style="text-align: center">No record found.</div>
                </div>

            }}

        </div>
        <!-- end table -->
    </div>
</div>

<script type="text/javascript">
    $.get('@Url.Action("a","c")', function () { });
</script>


