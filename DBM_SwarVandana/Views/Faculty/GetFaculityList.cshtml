@model List<Models.Faculties>
@{
    ViewBag.Title = "GetFaculityList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- table-info -->
    <div class="table-info">
        <!-- start table-form -->
        <div class="table-form">
            <form action="#">
                <label for="From">From Date</label>
                <input type="text" name="field" value="" class="input" />
                <label for="From">From Date</label>
                <input type="text" name="field" value="" class="input" />
                <select name="field" id="Inventory" class="select">
                    <option></option>
                </select>
                <input name="submit" type="submit" value="Excel Button" class="submit-btn" />
            </form>
        </div>
        <!-- end table-form -->
        <!-- start table -->
        <div class="table">
            <!-- start row -->
            <div class="row-first">
                <div class="td">Name of Faculty</div>
                <div class="td">Discipline</div>
                <div class="td">Contact Number</div>
                <div class="td">Date of Joining</div>
                <div class="td">Year of Experience</div>
                <div class="td">City</div>
                <div class="td">Action</div>
            </div>
            <!-- end row -->
            @foreach (var v in Model)
            {
                <!-- start row -->
                <div class="row">
                    <div class="td">@v.NameOfFaculty</div>
                    <div class="td">@v.DisciplineId</div>
                    <div class="td">@v.ContactNumber</div>
                    <div class="td">@string.Format("{0:dd MMM yyyy}", v.DOJ)</div>
                    <div class="td">@v.YearOfExperience</div>
                    <div class="td">@v.CityId</div>
                    <div class="td">
                    <a href="@Url.Action("FacultyRegistration", "Faculty", new { facultyId = v.FacultyId })" title="Edit"><span>Edit</span></a>
                        &nbsp;<a href="@Url.Action("DeleteFaculty", "Faculty", new { facultyId = v.FacultyId })" title="Edit"><span>Delete</span></a>
                    </div>
                </div>
                <!-- end row -->
            }
            @{if (Model.Count() == 0)
            {
                <div class="row">
                    <div class="td" style="text-align: center">No record found.</div>
                </div>

            }}

        </div>
        <!-- end table -->
    </div>
</div>

