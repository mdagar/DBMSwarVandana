@model List<Models.Faculties>
@{
    ViewBag.Title = "List of Faculity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function AddNew() {
        window.location.href = '@Url.Action("FacultyRegistration", "Faculty")';
    }
</script>
<div class="container">
    <!-- table-info -->
    <div class="table-info">
        <!-- start table-form -->
        <div class="table-form">
            <form action="#">
                <input type="text" name="search" value="@ViewBag.Search" class="input" />
                <input name="submit" type="submit" value="Search" class="submit-btn" />
                <label for="From">&nbsp;</label>
                <input name="submit" type="button" onclick="AddNew()" value="Add New" class="submit-btn" />
            </form>
        </div>
        <!-- end table-form -->
        <!-- start table -->
        <div style="float: left; width: 100%">
            <table cellpadding="0" cellspacing="0" class="table">
                <!-- start row -->
                <tr bgcolor="#ccc">                    
                    <td class="td">Name </td>
                    <td class="td">Discipline</td>
                    <td class="td">Contact Number</td>
                    <td class="td">DOB</td>
                    <td class="td">Joining Date</td>
                    <td class="td">Experience</td>
                    <td class="td">Salary</td>
                    <td class="td">State</td>
                    <td class="td">City</td>
                    <td class="td">Address</td>
                    <td class="td">Action</td>
                </tr>
                <!-- end row -->
                @foreach (var v in Model)
                {
                    <!-- start row -->
                    <tr>
                        <td class="td">@v.NameOfFaculty</td>
                        <td class="td">@v.DisciplaneName</td>
                        <td class="td">@v.ContactNumber</td>
                        <td class="td">@string.Format("{0:dd MMM yyyy}", v.DOB)</td>
                        <td class="td">@string.Format("{0:dd MMM yyyy}", v.DOJ)</td>
                        <td class="td">@v.YearOfExperience</td>
                        <td class="td">@String.Format("{0:0.##}", v.Salary)</td>
                        <td class="td">@v.StateName</td>
                        <td class="td">@v.CityName</td>
                        <td class="td">@v.Address</td>
                        <td class="td">
                            <a href="@Url.Action("FacultyRegistration", "Faculty", new { facultyId = v.FacultyId })" title="Edit"><span>Edit</span></a>
                            @*&nbsp;<a href="@Url.Action("DeleteFaculty", "Faculty", new { facultyId = v.FacultyId })" title="Edit"><span>Delete</span></a>*@
                        </td>
                    </tr>
                    <!-- end row -->
                }
                @{if (Model.Count() == 0)
                {
                    <tr class="row">
                        <td class="td" style="text-align: center">No record found.</td>
                    </tr>

                }}
            </table>
            @Html.Partial("_Paging")
        </div>
        <!-- end table -->
    </div>
</div>

